{
	"version": 7,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 23,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "ninja-multi-config",
			"displayName": "Ninja Multi-Config",
			"generator": "Ninja Multi-Config",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"binaryDir": "${sourceDir}/build/"
		}
	],
	"buildPresets": [
		{
			"name": "debug",
			"displayName": "Debug",
			"configurePreset": "ninja-multi-config",
			"configuration": "Debug"
		},
		{
			"name": "rel-with-deb-info",
			"displayName": "Release With Debug Info",
			"configurePreset": "ninja-multi-config",
			"configuration": "RelWithDebInfo"
		},
		{
			"name": "release",
			"displayName": "Release",
			"configurePreset": "ninja-multi-config",
			"configuration": "Release"
		},
		{
			"name": "min-size-rel",
			"displayName": "Minimal Release",
			"configurePreset": "ninja-multi-config",
			"configuration": "MinSizeRel"
		},
		{
			"name": "clean",
			"displayName": "Clean",
			"configurePreset": "ninja-multi-config",
			"targets": "clean"
		}
	],
	"testPresets": [
		{
			"name": "test-debug-all",
			"displayName": "Run all tests (Debug)",
			"configurePreset": "ninja-multi-config",
			"configuration": "Debug",
			"output": {
				"shortProgress": true,
				"outputOnFailure": true
			},
			"execution": {
				"stopOnFailure": false
			}
		},
		{
			"name": "test-release-all",
			"displayName": "Run all tests (Release)",
			"configurePreset": "ninja-multi-config",
			"configuration": "Release",
			"output": {
				"shortProgress": true,
				"outputOnFailure": true
			},
			"execution": {
				"stopOnFailure": false
			}
		}
	],
	"workflowPresets": [
		{
			"name": "configure-build-test-debug",
			"displayName": "Configure, Build, and Test (Debug)",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-multi-config"
				},
				{
					"type": "build",
					"name": "debug"
				},
				{
					"type": "test",
					"name": "test-debug-all"
				}
			]
		},
		{
			"name": "configure-build-test-release",
			"displayName": "Configure, Build, and Test (Release)",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-multi-config"
				},
				{
					"type": "build",
					"name": "release"
				},
				{
					"type": "test",
					"name": "test-release-all"
				}
			]
		}
	]
}
